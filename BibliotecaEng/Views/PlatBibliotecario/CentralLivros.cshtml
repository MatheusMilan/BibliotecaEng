<!DOCTYPE html>
<html lang="pt-br">
<head>
    <title>Inicio - Engenharia II</title>
    <meta charset="utf-8">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-+0n0xVW2eSR5OomGNYDnhzAbDsOXxcvSN1TPprVMTNDbiYZCxYbOOl7+AMvyTG2x" crossorigin="anonymous">
    <link href="~/css/Home.css" rel="stylesheet" />
    <link href="~/css/CssPadrao.css" rel="stylesheet" />
</head>
<body>
    <div id="MenuSuperior">
        <nav class="navbar navbar-expand-sm bg-dark navbar-dark">

            <a class="navbar-brand Titulo" href="#">Biblioteca Fisic Flix</a>

            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link" href="/PlatBibliotecario/Index">Inicio</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/PlatBibliotecario/ControleFluxoBiblioteca">Fluxo Bibliotecario</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/PlatBibliotecario/Financeiro">Financeiro</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/PlatBibliotecario/CentralAssinantes">Central Assinantes</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/PlatBibliotecario/CentralLivros">Central Livros</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/PlatBibliotecario/CentralAutores">Central Autores</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/PlatBibliotecario/CentralEditoras">Central Editoras</a>
                </li>
            </ul>
        </nav>
    </div>

    <div id="ConteudoPagina">
        <div class="table" style="width:50%; margin:auto;">
            <label> Digite o nome do Livro ou ID</label> <br />
            <input type="text" id="BuscaLivro" placeholder="Buscar" /> <button class="btn-primary" onclick="Buscar()">Buscar</button>
            <button class="btn-primary" onclick="AdicionarLivro()">Adicionar Novo Livro</button>

            <div id="AdicionarLivro">

            </div>

            <table class="table table-light scroll" id="tabelaLivros">
                <thead>
                    <tr>
                        <th scope="col">ID</th>
                        <th scope="col">Nome</th>
                        <th scope="col">Desc</th>
                        <th scope="col">Paginas</th>
                        <th scope="col">Ações</th>
                        <th scope="col">Ações</th>
                        <th scope="col">Ações</th>
                    </tr>
                </thead>
                <tbody>
                    @{ while (ViewBag.Livros.Read())
                        {
                            <tr>
                                <th scope="row">@ViewBag.Livros.GetString("liv_id")</th>
                                <td>@ViewBag.Livros.GetString("liv_nome")</td>
                                <td>@ViewBag.Livros.GetString("liv_desc")</td>
                                <td>@ViewBag.Livros.GetString("liv_paginas")</td>
                                <td><button id="@ViewBag.Livros.GetString("liv_id")">Status</button></td>
                                <td><button id="@ViewBag.Livros.GetString("liv_id")" onclick="CarregarAlterar(this.id)">Alterar</button></td>
                                <td><button id="@ViewBag.Livros.GetString("liv_id")">Deletar</button></td>
                            </tr>
                            <tr id="AcaoID @ViewBag.Livros.GetString("liv_id")">
                            </tr>
                        }

                    }
                </tbody>
            </table>
        </div>
    </div>

    <div id="Rodape">
        <footer class="fixarRodape">
            <hr />
            <p> @DateTime.Now.Year - Fisic Flix - Engenharia II</p>
        </footer>
    </div>

    <script src="~/Functions/PlatBibliotecario/CentralLivros.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/js/bootstrap.bundle.min.js" integrity="sha384-gtEjrD/SeCtmISkJkNUaaKMoLD0//ElJ19smozuHV6z3Iehds+3Ulb9Bn9Plx0x4" crossorigin="anonymous"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
</body>
</html>